<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/proza_libre</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MachineName" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/trejnado_font_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MachineInput" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/trejnado_font_large</item>
    </style>

    <style name="MachineValues" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/trejnado_font_large</item>
    </style>

</resources>
