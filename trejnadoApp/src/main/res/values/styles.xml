<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/proza_libre</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MachineName" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/trejnado_font_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MachineInput" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/trejnado_font_large</item>
    </style>

    <style name="MachineValues" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/trejnado_font_large</item>
    </style>

    <style name="TrejnadoSquareButton">
        <item name="android:textSize">@dimen/trejnado_font_large</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">@dimen/trejnado_button</item>
        <item name="android:layout_height">@dimen/trejnado_button</item>
    </style>
    <style name="TrejnadoButton">
        <item name="android:textSize">@dimen/trejnado_font_large</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
